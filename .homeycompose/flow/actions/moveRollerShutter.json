{
  "id": "moveRollerShutter",
  "title": {
    "en": "Change roller shutter",
    "nl": "Wijzig roller shutter"
  },
  "hint": {
    "en": "Use this card to open, close or stop your roller shutter for a given time.",
    "nl": "Gebruik deze actie om de roller shutter te openen, sluiten of stoppen met de opgegeven duur."
  },
  "args": [
    {
      "name": "direction",
      "type": "dropdown",
      "placeholder": {
        "en": "Direction",
        "nl": "Richting"
      },
      "values": [
        {
          "id": "open",
          "label": {
            "en": "Up",
            "nl": "Omhoog"
          }
        },
        {
          "id": "stop",
          "label": {
            "en": "Stop",
            "nl": "Stop"
          }
        },
        {
          "id": "close",
          "label": {
            "en": "Down",
            "nl": "Omlaag"
          }
        }
      ]
    },
    {
      "name": "move_duration",
      "type": "number",
      "min": 0.1,
      "max": 3600,
      "step": 0.1,
      "placeholder": {
        "en": "Duration in seconds",
        "nl": "Duur in seconden"
      }
    },
    {
      "name": "device",
      "type": "device",
      "placeholder": {
        "en": "Select Shelly 2",
        "nl": "Selecteer Shelly 2"
      },
      "filter": "driver_id=shelly2-rollershutter|shelly25-rollershutter"
    }
  ]
}