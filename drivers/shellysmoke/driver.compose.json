{
  "name": {
    "en": "Shelly Smoke Detector",
    "nl": "Shelly Rook Detector"
  },
  "class": "sensor",
  "discovery": "shellysmoke",
  "$extends": [
    "defaultsnoactions"
  ],
  "capabilities": [
    "alarm_smoke",
    "measure_temperature",
    "measure_battery",
    "measure_voltage"
  ],
  "pair": [
    {
      "id": "start",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ],
  "energy": {
    "batteries": [
      "AA"
    ]
  }
}
